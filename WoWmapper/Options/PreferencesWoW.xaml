<UserControl x:Class="WoWmapper.Options.PreferencesWoW"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoWmapper.Options"
             xmlns:p="clr-namespace:WoWmapper.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="{x:Static p:Resources.OPTIONS_WOW_TITLE}">
        <ScrollViewer>
            <StackPanel Margin="5">
                <TextBlock Text="{x:Static p:Resources.OPTIONS_WOW_FOLDER}"/>
                <StackPanel Orientation="Vertical">
                    <TextBox Name="textWoWPath" Margin="0,5,0,0" IsReadOnly="True"/>
                    <Button Name="buttonLocateWoW" Content="{x:Static p:Resources.OPTIONS_WOW_FOLDER_BROWSE}" Margin="0,5,0,0" Click="buttonLocateWoW_Click" />
                </StackPanel>
                <DockPanel Margin="0,10,0,0">
                    <TextBlock Text="{x:Static p:Resources.OPTIONS_WOW_ARCHITECTURE}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <ComboBox Name="comboGameArchitecture" Width="120"  HorizontalAlignment="Right" SelectionChanged="comboGameArchitecture_SelectionChanged">
                        <ComboBoxItem Content="{x:Static p:Resources.OPTIONS_WOW_ARCHITECTURE_AUTO}"/>
                        <ComboBoxItem Content="{x:Static p:Resources.OPTIONS_WOW_ARCHITECTURE_64}" />
                        <ComboBoxItem Content="{x:Static p:Resources.OPTIONS_WOW_ARCHITECTURE_32}" />
                    </ComboBox>
                </DockPanel>
                <CheckBox Content="{x:Static p:Resources.OPTIONS_WOW_SEND_KEYS_DIRECT}" Margin="0,5,0,0" IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=SendKeysDirect}" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnChecked"/>
            </StackPanel>
        </ScrollViewer>
    </GroupBox>
</UserControl>
