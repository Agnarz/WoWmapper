<UserControl x:Class="WoWmapper.Options.PreferencesWoWmapper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoWmapper.Options"
             xmlns:p="clr-namespace:WoWmapper.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox x:Name="groupBox" Header="{x:Static p:Resources.OPTIONS_WOWMAPPER_TITLE}">
        <ScrollViewer>
            <StackPanel Margin="5">
                <CheckBox Name="checkStartMinimized" Content="{x:Static p:Resources.OPTIONS_WOWMAPPER_START_MINIMIZED}" Margin="0" Checked="checkStartMinimized_Checked" Unchecked="checkStartMinimized_Checked"/>
                <CheckBox Name="checkMinimizeTray" Content="{x:Static p:Resources.OPTIONS_WOWMAPPER_MINIMIZE_TRAY}"  Margin="0,5,0,0" Checked="checkMinimizeTray_Checked" Unchecked="checkMinimizeTray_Checked"/>
                <CheckBox Name="checkCloseTray" Content="{x:Static p:Resources.OPTIONS_WOWMAPPER_CLOSE_TRAY}"  Margin="0,5,0,0" Checked="checkCloseTray_Checked" Unchecked="checkCloseTray_Checked" />
            </StackPanel>
        </ScrollViewer>
    </GroupBox>
</UserControl>
